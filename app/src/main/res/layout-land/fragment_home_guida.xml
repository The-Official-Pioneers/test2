<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.FragmentHomeGuida">


    <LinearLayout
        android:id="@+id/ButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <EditText
            android:id="@+id/text_cerca"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/login_edittext"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:gravity="center"
            android:hint="Cerca ..."
            android:inputType="text"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btn_tue_visite"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="le tue visite"
            android:textColor="#212121" />


        <Button
            android:id="@+id/btn_visite_effettuate"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="visite effettuate"
            android:textColor="#212121" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/QRContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/qr_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginRight="130dp"
            android:layout_marginLeft="5dp">

            <ImageButton
                android:id="@+id/btn_interagisci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:contentDescription="Interagisci"
                android:onClick="scannerQr"
                android:src="@drawable/ic_baseline_qr_code_scanner_24" />

            <TextView
                android:id="@+id/text_interagisci"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="interagisci con l'opera"
                android:gravity="center_horizontal"
                android:text="Interagisci con l'opera"
                android:textColor="#212121"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>
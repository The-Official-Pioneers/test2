<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_input_cerca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.FragmentHomeVisitatore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_cerca"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/login_edittext"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:gravity="center"

            android:inputType="text"
            tools:ignore="TextContrastCheck" />


        <Button
            android:id="@+id/btn_crea_visita"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"

            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_tue_visite"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"

            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_visite_predefinite"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="Visite predefinite"
            android:textColor="#212121" />

        <androidx.cardview.widget.CardView
            android:id="@+id/qr_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            >

            <ImageButton
                android:id="@+id/btn_interagisci"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:contentDescription="Interagisci"
                android:onClick="scannerQr"
                android:src="@drawable/ic_baseline_qr_code_scanner_24" />

            <TextView
                android:id="@+id/text_interagisci"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="interagisci con l'opera"
                android:gravity="center_horizontal"

                android:textColor="#212121"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/salvaPercorso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/dowloadVisita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="CONDIVIDI"
        android:background="@drawable/login_btn"
        app:srcCompat="@drawable/ic_baseline_cloud_download_24"
        android:visibility="gone"/>

    <!--<ImageButton
        android:id="@+id/shareVisita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="@drawable/login_btn"
        app:srcCompat="@drawable/ic_baseline_share_24"
        /> -->
    <Button
        android:id="@+id/shareVisita"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/condividi_visita"
        android:layout_marginBottom="3dp"
        android:background="@drawable/login_btn"
        android:drawableLeft="@drawable/ic_baseline_share_24"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_gravity="bottom"/>


    <ImageButton
        android:id="@+id/deleteVisita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="@drawable/login_btn"
        app:srcCompat="@drawable/ic_baseline_delete_forever_24"
        android:visibility="gone"/>

</LinearLayout>
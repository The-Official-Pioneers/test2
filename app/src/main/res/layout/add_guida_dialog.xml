<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/scegli_guida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scegli_guida"
            android:textSize="26dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/text_scegli_guida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scegli_guida_testo"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>/>

        <Spinner
            android:id="@+id/spinner_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_after_guida_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/testo_dopo_guida"
            android:textSize="12dp"
            android:layout_marginTop="13dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>